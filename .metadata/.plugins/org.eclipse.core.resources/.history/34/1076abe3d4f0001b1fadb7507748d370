package day06_while;

import java.util.Scanner;

public class Test1 {
	public static void main(String[] args) {
		int num, sum=0, i=1;
		Scanner scanner = new Scanner(System.in);
		System.out.print("수 입력>>");
		num = scanner.nextInt();
		
		if(num<=10) {
			while(true) {
				i++;
				sum+=num;
				System.out.println("i="+i+"/ sum="+sum);
				if(i==num) {
					break;
				}
			}
		}else {
			System.out.println("1~10 사이 수만 입력하시오");
		}
		
	}
}
