package Juhee0730;

import java.util.Scanner;

public class Q1 {
/*
# 1. 박승재 문제
홀수를 입력하시오
  *
 ***
*****
 ***
  *
 */
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("홀수 입력>>");
		int num=scanner.nextInt();
		
		for(int i=1; i<=num; i++) {
			if(num%2==0) {
				System.out.println("홀수를 입력하시오");
				break;
			}
			for(int space=num-2; space>0; space=space-2) {
				System.out.print(" ");
			}
			
			for(int star=1; star<=num; star=star+2) {
				System.out.print("*");
				
			}System.out.println();
				
		}
		
	}
}
