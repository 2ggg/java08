package Juhee0730;

import java.util.Scanner;

public class Q01 {
/*
# 1. 박승재 문제
홀수를 입력하시오
  *
 ***
*****
 ***
  *
 */
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("홀수 입력>>");
		int num=scanner.nextInt();
		
		for(int i=1; i<=num; i++) {
			if(num%2==0) {
				System.out.println("홀수를 입력하시오");
				break;
			}
			for(int x = 1; x <= num/2+1; x++) {
				for(int y = 0; y <= num/2-x; y++) {
					System.out.print(" ");
				}
				for(int z = 0; z < 2*x-1; z++) {
					System.out.print("*");
				}
				System.out.println();
			}
			for(int x = num/2; x >= 0; x--) {
				for(int y = 0; y <= num/2-x; y++) {
					System.out.print(" ");
				}
				for(int z = 0; z < 2*x-1; z++) {
					System.out.print("*");
				}
				System.out.println();
			}
		}
		
	}
}
