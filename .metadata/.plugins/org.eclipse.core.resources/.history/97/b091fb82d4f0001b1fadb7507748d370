package day06_while;

import java.util.Scanner;

public class Test1 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("수 입력>>");
		int num = scanner.nextInt();
		int sum=0;
		
		if(num<=10) {
			while(true) {
				num++;
				sum+=num;
			}
		}else {
			System.out.println("1~10 사이 수만 입력하시오");
		}
		
	}
}
