package Juhee0730;

import java.util.Scanner;

public class Q01 {
/*
# 1. 박승재 문제
홀수를 입력하시오
  *
 ***
*****
 ***
  *
 */
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("홀수 입력>>");
		int num=scanner.nextInt();
		
		for(int i=1; i<=num; i++) {
			if(num%2==0) {
				System.out.println("홀수를 입력하시오");
				continue;
			}
			
			for(int j=num-2; j<=; j--) {
				if(i>j) {
					System.out.print("*");
				}else if(j<i) {
					System.out.print(" ");
				}
			}
			System.out.println();
			
			i++;
		}
		
	}
}
