		int i=0;
		int space = num-2;
		while(i<=num) {
			for(i=1; i<=num; i+=2) {
				for(space=num; space>0; space-=2) {
					System.out.print(" ");
				}
				for(int star=1; star<=i; star+=2) {
					System.out.print("*");
				}
				System.out.println();
			}
			
		}
		
	}
