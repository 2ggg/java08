package day02_variable;

import java.util.Scanner;

public class Q02 {
	private void rep() {
		for(int i=0; i<=15; i++) {
			System.out.print("=");
		}
		System.out.println();
	}
	private void sum(int a, int b, int c) {
		int sum= 0;
		sum = a+b+c;
		return sum;
	}
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		Q02 q02 = new Q02();
		q02.rep();
		
		int lang, eng, math;
		String name;
		
		System.out.print("이름: ");
		name = scanner.next();
		System.out.print("국어: ");
		lang = scanner.nextInt();
		System.out.print("영어: ");
		eng = scanner.nextInt();
		System.out.print("수학: ");
		math = scanner.nextInt();
		q02.rep();
		int summ = q02.sum(lang, eng, math);
		System.out.println("합계: "+summ);
		q02.rep();
	}
}
